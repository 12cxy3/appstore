<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zs.modules.app.dao.AppCommentDao">

    <resultMap type="com.zs.modules.app.entity.AppCommentEntity" id="appCommentMap">
        <result property="id" column="id"/>
        <result property="appId" column="app_id"/>
        <result property="comment" column="comment"/>
        <result property="score" column="score"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
    </resultMap>
    <select id="selectByUserIdAndAppId" resultType="java.lang.Integer">
        select
            count(0)
        from
            app_comment
        where app_id = #{appId} and creator = #{userId}
    </select>
    <select id="getPage" resultType="com.zs.modules.app.dto.AppCommentDTO">
        SELECT
            t1.*,
            t2.head_url,
            t2.real_name
        FROM
            `app_comment` t1
        LEFT JOIN `sys_user` t2
            ON t1.creator = t2.id
        ${ew.customSqlSegment}
    </select>


</mapper>